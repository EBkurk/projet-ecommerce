{% extends 'base.html.twig' %}

{% block title %}Compose index{% endblock %}

{% block body %}
    <h1>Compose index</h1>
    <input type="hidden" id="NomObjet" value="Compose">
    <input type="hidden" id="Url" value="{{ path('app_fetch_tableau') }}">
    <table class="table sortable" id="MyTable">
        <thead>
            <tr>
                <td class="no-sort colloneTable"><input id="checkboxAll" type="checkbox" onchange="selectAll(this)"></td>
                <th>Id</th>
                <th>Materiaux</th>
                <th>Produit</th>
                <th class="no-sort">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compose in composes %}
            <tr>
                <td><input type="checkbox" onchange="selectOne()"></td>
                <td>{{ compose.id }}</td>
                <td>{{ compose.materiaux }}</td>
                <td>{{ compose.produit }}</td>
                <td>
                    <a href="{{ path('app_compose_show', {'id': compose.id}) }}">show</a>
                    <a href="{{ path('app_compose_edit', {'id': compose.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_compose_new') }}">Cr√©er un nouveau</a>
    <a href="{{ path('homepage') }}">Retour menu</a>
    <button id="btn-delete-row" style="display: none" onclick="deleteRows()" class="btn btn-danger">Supprimer</button>
{% endblock %}
