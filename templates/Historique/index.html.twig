{% extends 'base.html.twig' %}

{% block title %}Historique{% endblock %}

{% block content %}
<style>
    body {
        font-family: Arial, sans-serif;
    }
    h1 {
        color: #333;
        text-align: center;
    }
    .order-container {
        margin: 20px auto;
        width: 80%;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        background-color: #f9f9f9;
    }
    .order-title {
        color: #444;
        text-align: left;
    }
    .order-products {
        list-style-type: none;
    }
    .order-products li {
        padding: 10px 0;
        border-bottom: 1px solid #eee;
    }
    .no-orders-message {
        text-align: center;
        color: #888;
        font-size: 20px;
    }
</style>

<h1>Mes commandes</h1>

{% for commande in Commandes %}
    <div class="order-container">
        <h2 class="order-title">Commande du {{ commandes.date|date('d/m/Y') }}</h2>
        <ul class="order-products">
        {% for produit in commandes.produit %}
            <li>{{ produit.nom }} - {{ produit.prix }}€</li>
        {% endfor %}
        </ul>
    </div>
{% else %}
    <p class="no-orders-message">Vous n'avez pas encore passé de commande.</p>
{% endfor %}

{% endblock %}

